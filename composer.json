{
    "name": "willgarcia/silex-api-boilerplate",
    "version": "0.1.0",
    "description": "Silex application for getting started with your API.",
    "license": "MIT",
    "keywords": ["API", "Rest", "HATEOAS"],
    "authors": [
        {
            "name": "William Garcia",
            "email": "garcia.rodriguez.william@gmail.com",
            "role": "Maintainer"
        },
        {
            "name": "Julien Bianchi",
            "email": "contact@jubianchi.fr",
            "homepage": "http://jubianchi.fr",
            "role": "Contributors"
        }
    ],
    "require": {
        "php": ">=5.4",
        "silex/silex": "~1.0",
        "willdurand/hateoas": "~2.0",
        "monolog/monolog": ">=1.0.0"
    },
    "require-dev": {
        "behat/behat": "~3.0",
        "behat/mink": "~1.6@dev",
        "behat/mink-extension": "2.0.*@dev",
        "behat/mink-goutte-driver": "1.1.*@dev",
        "behat/mink-browserkit-driver": "~1.2@dev",
        "camspiers/json-pretty": "1.0.*",
        "phpmd/phpmd" : "2.*",
        "fabpot/php-cs-fixer": "0.*"
    },
    "autoload": {
        "psr-0": {
            "Api": "src"
        },
        "classmap": ["tests/functional/bootstrap"]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "minimum-stability": "stable"
}
